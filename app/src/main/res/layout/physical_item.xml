<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="@dimen/standard_icon">

        <TextView
            android:id="@+id/sport_name"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/commonText"
            android:textColor="@color/secondaryTextColor"
            android:text="Pływanie"
            android:layout_marginVertical="10dp"
            android:layout_width="@dimen/long_button"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/sport_value"
            android:textColor="@color/secondaryTextColor"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/commonText"
            android:text="duża"
            android:layout_marginVertical="10dp"
            android:layout_width="@dimen/long_button"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/sport_time"
            android:layout_weight="1"
            android:textColor="@color/secondaryTextColor"
            android:textAlignment="center"
            android:textSize="@dimen/commonText"
            android:layout_width="@dimen/long_button"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:text="30" />
</LinearLayout>